class Docente

    --types
    --String = seq of char;

    instance variables
    nombre: seq of char;
    dni: seq of char;

    operations
    public Docente: seq of char * seq of char ==> Docente
    Docente(n, d) ==
      (nombre := n;
       dni := d;
       return self)
    pre len(n) > 0 and len(d) = 8;

end Docente

class RegistroAsistencia
    --types
    --Fecha = nat1 * nat1 * nat1;
    instance variables
    codigo: nat;
    semestre: nat1;
    fecha: nat1 * nat1 * nat1;
    docente: Docente;
    asignatura: Asignatura;

    operations
    public RegistroAsistencia: nat * nat1 * (nat1 * nat1 * nat1) * Docente * Asignatura ==> RegistroAsistencia
    RegistroAsistencia(cod, sem, fec, d, a) ==
      (codigo := cod;
       semestre := sem;
       fecha := fec;
       docente := d;
       asignatura := a;
       return self)
    pre cod > 0;

end RegistroAsistencia














